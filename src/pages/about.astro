---
import BaseLayout from "../layouts/BaseLayout.astro";
import SkillBadge from "../components/SkillBadge.astro";
import ContactLinks from "../components/ContactLinks.astro";

const skills = {
  Languages: ["Python", "JavaScript", "TypeScript", "HTML/CSS", "SQL"],
  "Data & Analytics": ["Statistics Canada APIs", "SDMX", "Data Visualization", "Statistical Analysis", "Survey Design"],
  "Web Development": ["Astro", "Tailwind CSS", "Node.js", "Cloudflare Workers"],
  Tools: ["Git", "GitHub", "VS Code"],
};
---

<BaseLayout
  title="About — Tom Hwang"
  description="I studied economics, now I do policy analysis by day and build things by night. I'm just a guy who likes making stuff."
>
  <section class="max-w-3xl mx-auto px-6 py-16">
    <h1
      class="text-xl sm:text-2xl font-bold text-surface-900 dark:text-surface-100 tracking-tight"
    >
      About Me
    </h1>

    <div class="mt-10 flex flex-col md:flex-row gap-10">
      <!-- Photo -->
      <div class="shrink-0">
        <img
          src="/images/headshot.jpg"
          alt="Sung Woo Hwang"
          width="192"
          height="192"
          class="w-48 h-48 rounded-2xl bg-surface-200 dark:bg-surface-800 object-cover"
        />
      </div>

      <!-- Bio -->
      <div class="space-y-4 text-surface-600 dark:text-surface-400 leading-relaxed">
        <p>
          Hi, I'm <strong class="text-surface-900 dark:text-surface-100">Tom</strong>.
          I studied math and economics, and now I do policy analysis with big data. That's the day job.
        </p>
        <p>
          The rest of the time, I build things. If something I want doesn't exist,
          I'll make it myself — a language learning app, a data dashboard, whatever's
          on my mind. I get fascinated by the latest in tech and crypto space.
        </p>
        <p>
          When I'm not at a keyboard, I'm probably on a badminton court somewhere
          in Ottawa. I'd love to be at SF, Seattle, Bengaluru, or Shenzhen.
        </p>
      </div>
    </div>

    <!-- Skills -->
    <div class="mt-16">
      <h2
        class="text-xl font-semibold text-surface-900 dark:text-surface-100 mb-6"
      >
        Technologies
      </h2>
      <div class="space-y-4">
        {
          Object.entries(skills).map(([category, items]) => (
            <div>
              <h3 class="text-sm font-medium text-surface-500 dark:text-surface-400 mb-2">
                {category}
              </h3>
              <div class="flex flex-wrap gap-2">
                {items.map((skill) => (
                  <SkillBadge name={skill} />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Contact -->
    <div class="mt-16">
      <h2
        class="text-xl font-semibold text-surface-900 dark:text-surface-100 mb-6"
      >
        Get in Touch
      </h2>
      <ContactLinks />
    </div>
  </section>
</BaseLayout>
